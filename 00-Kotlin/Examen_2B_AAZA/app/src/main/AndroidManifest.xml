<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Deber02_2B_AAZA"
        tools:targetApi="31">

        <!-- API Key de Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDAgjJMB8rGiT9CAtP60pL9T8_ok7CxdJU" />


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Deber02_2B_AAZA">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GMaps"
            android:exported="false"
            android:label="Mapa"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity
            android:name=".GMapsPlaceholder"
            android:exported="false"
            android:label="@string/title_activity_ggoogle_maps_placeholder"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <!-- La actividad UniversidadesActivity -->
        <activity
            android:name=".UniversidadesActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Deber02_2B_AAZA" />

        <!-- La actividad CarrerasActivity -->
        <activity
            android:name=".CarrerasActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Deber02_2B_AAZA" />

        <!-- La actividad EditarActivity -->
        <activity
            android:name=".EditarActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Deber02_2B_AAZA" />

    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
